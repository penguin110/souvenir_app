
    <%= form_for( @souvenirs, url:{controller: :souvenirs, action: action}) do |f| %>
    
        <% if action == "new" %>
        <% action = "新規投稿" %>
        <% else %>
        <% action = "更新" %>
        <% end %>
        <div class = "form-group">
        <%= f.label:品名 %><br/>
        <%= f.text_field:"name",class:"form-control" %><br/>
        <%= f.label:都道府県名 %><br/>
        <%= f.collection_select :prefecture_id,Prefecture.all, :id, :name, {include_blank: "---"},class:"form-control" %><br/>
        <%= f.label:コメント %><br/>
        <%= f.text_area:"comment",class:"form-control" %><br/>
        <%= f.label:写真 %><br/>
        <%= f.file_field:"image_name", :style=>"center" %><br/>

        <%= f.submit action , class:"btn btn-primary btn-sm" %>
        </div>
    <% end %>