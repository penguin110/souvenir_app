
    <div class="row text-center">
  <%= form_for( @souvenirs, url:{controller: :souvenirs, action: action}) do |f| %>
  <div class="col">
    <% if action == "new" %>
    <% action = "新規投稿" %>
    <% else %>
    <% action = "更新" %>
    <% end %>
  </div>
  <div class="col-md-8">
    <%= f.label:品名 %><br />
    <%= f.text_field:"name",class:"form-control " %><br />
  </div>
  <div class="col-md-8">
    <%= f.label:都道府県名 %><br />
    <%= f.collection_select :prefecture_id,Prefecture.all, :id, :name, {include_blank: "---"},class:"form-control" %><br />
  </div>
  <div class="col-md-8">
    <%= f.label:コメント %><br />
    <%= f.text_area:"comment",class:"form-control" %><br />
  </div>
  <div class="col-md-8">
    <%= f.label:写真 %><br />
    <label>
    <div class = "btn btn-primary">
    ファイルを選択してください
    <%= f.file_field:"image_name", :style=>"display: none" %><br />
    </div>
    </label>
    <%= f.submit action , class:"btn btn-primary btn-sm" %>
  </div>
  <% end %>
</div>